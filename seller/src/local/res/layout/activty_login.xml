<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shap_rect_bottom_line">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:textSize="28dp"
            android:text="用户登录" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="注册"
            android:background="#00000000"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_centerInParent="true">
        <EditText
            android:id="@+id/et_act_login_phone_number"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="请输入手机号码"/>
        <EditText
            android:id="@+id/et_act_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_act_login_phone_number"
            android:hint="请输入登录密码"/>
        <Button
            android:id="@+id/et_act_login_password_lost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/et_act_login_password"
            android:background="#00000000"
            android:text="忘记密码？立即找回"/>

        <Button
            android:id="@+id/et_act_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_act_login_password_lost"
            android:text="登录"
            />
    </RelativeLayout>
</RelativeLayout>