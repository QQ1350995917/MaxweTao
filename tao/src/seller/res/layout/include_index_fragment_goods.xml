<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:minHeight="120dp"
    android:orientation="horizontal">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_inc_index_frg_item_goods_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        fresco:actualImageScaleType="focusCrop"
        fresco:fadeDuration="300"
        fresco:failureImageScaleType="centerInside"
        fresco:placeholderImageScaleType="fitCenter"
        fresco:progressBarAutoRotateInterval="1000"
        fresco:progressBarImageScaleType="centerInside"
        fresco:retryImageScaleType="centerCrop"
        fresco:roundAsCircle="false"
        fresco:roundBottomLeft="false"
        fresco:roundBottomRight="true"
        fresco:roundTopLeft="true"
        fresco:roundTopRight="false"
        fresco:roundedCornerRadius="1dp"
        fresco:roundingBorderWidth="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_inc_index_frg_item_goods_from"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_tao"/>
            <TextView
                android:id="@+id/iv_inc_index_frg_item_goods_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/iv_inc_index_frg_item_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#FF4500"
                android:gravity="center_horizontal|bottom"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/iv_inc_index_frg_item_goods_price_reserve"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#CCCCCC"
                android:gravity="center_horizontal|bottom"
                android:textSize="12dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/iv_inc_index_frg_item_brokerage_label"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#CCCCCC"
                android:gravity="center_horizontal|bottom"
                android:textSize="12dp"
                android:text="佣金"/>
            <TextView
                android:id="@+id/iv_inc_index_frg_item_brokerage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#FF4500"
                android:gravity="center_horizontal|bottom"
                android:textSize="22dp"/>
            <TextView
                android:id="@+id/iv_inc_index_frg_item_brokerage_got"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#CCCCCC"
                android:gravity="center_horizontal|bottom"
                android:textSize="12dp" />
            <TextView
                android:id="@+id/iv_inc_index_frg_item_sale"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#CCCCCC"
                android:gravity="right|bottom"
                android:textSize="12dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>