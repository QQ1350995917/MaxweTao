<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="10dp">

        <EditText
            android:id="@+id/et_frg_link_content"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/selector_rect_board"
            android:gravity="top"/>

        <TextView
            android:id="@+id/et_frg_link_paste"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="一键粘贴"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textAlignment="center" />

        <Button
            android:id="@+id/bt_act_link_action"
            style="@style/button_list_green"
            android:textColor="@color/white"
            android:layout_below="@+id/bt_frg_mine_about_us"
            android:layout_marginTop="30dp"
            android:background="@drawable/selector_button_list_red"
            android:text="立即获取淘口令"/>

    </LinearLayout>
</LinearLayout>