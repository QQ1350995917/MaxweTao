<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/ll_frg_index_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_frg_index_tao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_rect_bottom_line"
            android:gravity="center"
            android:text="淘宝商品"
            android:textColor="@drawable/selector_tab_text_color" />

        <TextView
            android:id="@+id/tv_frg_index_my"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_rect_bottom_line"
            android:gravity="center"
            android:text="站内精品"
            android:textColor="@drawable/selector_tab_text_color" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_frg_index_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_frg_index_title"></android.support.v4.view.ViewPager>
</RelativeLayout>