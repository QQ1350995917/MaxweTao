<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:background="@mipmap/index_bg" />

    <ImageView
        android:id="@+id/iv_frg_index_slogan"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:background="@mipmap/index_slogan" />

    <LinearLayout
        android:id="@+id/ll_frg_index_main_block"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_below="@+id/iv_frg_index_slogan"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_frg_index_tao_goods"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:textSize="28sp"
                android:background="#ECD845"
                android:text="淘宝\r\n商品"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/bt_frg_index_tao_mami"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:background="#2EB8A1"
                android:textSize="28sp"
                android:text="站内\r\n精品"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_frg_index_tao_other"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:background="#00A34E"
                android:text="其他"
                android:textSize="28sp"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/bt_frg_index_tao_money"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#F05D76"
                android:text="高佣\r\n商品"
                android:textSize="28sp"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_frg_index_main_block">

        <LinearLayout
            android:id="@+id/ll_act_frg_index_goods_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <Button
                android:id="@+id/bt_frg_index_tutorial"
                style="@style/button_list_green"
                android:text="新手教程" />

            <Button
                android:id="@+id/bt_frg_index_readme"
                style="@style/button_list_green"
                android:text="用户必看" />

            <Button
                android:id="@+id/bt_frg_index_introduction"
                style="@style/button_list_green"
                android:text="功能介绍" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>