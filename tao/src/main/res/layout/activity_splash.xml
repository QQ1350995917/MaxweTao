<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8BD5E0"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_act_splash_tao"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/animation_tao" />

    <ImageView
        android:id="@+id/iv_act_splash_slogan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_act_splash_tao"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/slogan" />


    <ImageView
        android:layout_width="166dp"
        android:layout_height="63dp"
        android:layout_below="@+id/iv_act_splash_slogan"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/company_name" />

    <TextView
        android:id="@+id/tv_act_splash_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:text="版本号"
        android:textColor="@color/white"
        android:textSize="18dp" />

</RelativeLayout>