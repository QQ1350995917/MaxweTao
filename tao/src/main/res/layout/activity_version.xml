<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_act_version_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/string_new_version"
        android:textSize="20dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/tv_act_version_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/string_new_version"
        android:layout_below="@+id/tv_act_version_title"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_act_version_upgrade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/string_new_version_upgrade"
        android:layout_below="@+id/tv_act_version_info"
        android:textColor="#000000"
        android:visibility="gone"
        android:textSize="18dp"
        android:layout_marginTop="10dp"/>
</RelativeLayout>