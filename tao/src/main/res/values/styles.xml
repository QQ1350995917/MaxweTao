<resources>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme_activity_dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="nav_header_of_act">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/shape_rect_board_grey</item>
    </style>

    <style name="editor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="editor_login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/shape_ellipse_blue_border</item>
    </style>

    <style name="editor_register">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#868687</item>
        <item name="android:background">@drawable/selector_editor_bottom_line</item>
    </style>

    <!--选项-->
    <style name="radio_group_md_blue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/selector_button_radio</item>
        <item name="android:textColor">@drawable/selector_text_color_radio</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
    </style>

    <style name="radio_group_radio_button_index">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawableTop">@drawable/selector_button_radio_index</item>
        <item name="android:textColor">@drawable/selector_text_color_radio</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
    </style>

    <style name="radio_group_radio_button_mine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawableTop">@drawable/selector_button_radio_mine</item>
        <item name="android:textColor">@drawable/selector_text_color_radio</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
    </style>

    <style name="radio_group_radio_button_link">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawableTop">@drawable/selector_button_radio_link</item>
        <item name="android:textColor">@drawable/selector_text_color_radio</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
    </style>

    <style name="radio_group_radio_button_agent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
        <!--<item name="android:drawableTop">@drawable/selector_button_radio_link</item>-->
        <item name="android:textColor">@drawable/selector_text_color_radio</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
    </style>
    
    <style name="button_block">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">24dp</item>
    </style>

    <style name="button_block_action_bar" parent="button_block">
        <item name="android:layout_height">35dp</item>
        <item name="android:textSize">12dp</item>
        <item name="android:layout_margin">1dp</item>
    </style>
    
    <!--固定列表按钮，正常绿色边框，绿色文字，按压绿色背景，白色文字-->
    <style name="button_list_green">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_button_list</item>
        <item name="android:textColor">@drawable/selector_text_color_list</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    
</resources>
