<resources>

    <!-- Base application theme. -->
    <style name="navigate">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="index_block_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="table_cell">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="table_cell_of_agent" parent="table_cell">
        <item name="android:height">30dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="trade_detail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="radio_group_md_blue_code" parent="radio_group_md_blue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawableTop">@drawable/selector_main_tab_code</item>
        <item name="android:textColor">@drawable/selector_text_color_radio</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
    </style>
    <style name="radio_group_md_blue_agents" parent="radio_group_md_blue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawableTop">@drawable/selector_main_tab_agents</item>
        <item name="android:textColor">@drawable/selector_text_color_radio</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
    </style>
    <style name="radio_group_md_blue_mine" parent="radio_group_md_blue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawableTop">@drawable/selector_main_tab_mine</item>
        <item name="android:textColor">@drawable/selector_text_color_radio</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
    </style>

</resources>
