<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_act_trade_nav"
        style="@style/nav_header_of_act">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/string_access_trade"
            android:textSize="24dp" />

        <Button
            android:id="@+id/bt_act_trade_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:text="@string/string_back" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/pb_act_trade_progress"
        style="?android:attr/progressBarStyleInverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_act_trade_search_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="22dp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_act_trade_search_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_act_trade_nav"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <EditText
            android:id="@+id/et_act_trade_search_content"
            style="@style/editor"
            android:hint="@string/string_input_cellphone"
            android:inputType="number"
            android:maxLength="11" />

        <Button
            android:id="@+id/bt_act_trade_search_action"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/et_act_trade_search_content"
            android:layout_alignRight="@+id/et_act_trade_search_content"
            android:layout_marginBottom="10dp"
            android:text="@string/string_search" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_act_trade_search_result_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_act_trade_search_container"
        android:orientation="vertical"
        android:padding="15dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_act_trade_search_result_cellphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_act_trade_search_result_grant_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/et_act_trade_code_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入转让数量"
            android:inputType="number"
            android:maxLength="4"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/tv_act_trade_code_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="确认转让" />

        <TextView
            android:id="@+id/tv_act_trade_trade_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:gravity="center"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</RelativeLayout>