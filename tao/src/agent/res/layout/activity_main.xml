<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".main.MainActivity">

    <FrameLayout
        android:id="@+id/fl_act_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

    <RadioGroup
        android:id="@+id/rg_act_navigate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_agent_gradient"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_act_main_active_code"
            style="@style/radio_group_md_blue_code"
            android:background="@color/transparent"
            android:text="@string/string_active_code"
            android:checked="true" />

        <RadioButton
            android:id="@+id/rb_act_main_agent"
            style="@style/radio_group_md_blue_agents"
            android:clickable="true"
            android:background="@color/transparent"
            android:text="@string/string_agent" />

        <RadioButton
            android:id="@+id/rb_act_main_mine"
            style="@style/radio_group_md_blue_mine"
            android:clickable="true"
            android:background="@color/transparent"
            android:text="@string/string_mine" />
    </RadioGroup>
</RelativeLayout>
