<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".main.MainActivity">

    <FrameLayout
        android:id="@+id/fl_act_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

    <RadioGroup
        android:id="@+id/rg_act_navigate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#CCCCCC"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_act_main_active_code"
            style="@style/navigate"
            android:background="@drawable/menu_item_selector"
            android:checked="true"
            android:text="@string/string_active_code" />

        <RadioButton
            android:id="@+id/rb_act_main_agent"
            style="@style/navigate"
            android:background="@drawable/menu_item_selector"
            android:checked="false"
            android:text="@string/string_agent" />

        <RadioButton
            android:id="@+id/rb_act_main_mine"
            style="@style/navigate"
            android:background="@drawable/menu_item_selector"
            android:checked="false"
            android:text="@string/string_mine"
            android:textAlignment="center" />
    </RadioGroup>
</RelativeLayout>
